@model Sitecore.SharedSource.CognitiveServices.OleChat.Models.ItemContextParameters

@{
    ViewBag.Title = "Cognitive Services: Ole Chat";
    Layout = "~/Views/CognitiveCommon/CognitiveLayout.cshtml";
}

<link href="/sitecore modules/Web/SitecoreCognitiveServices/css/Sitecore.SharedSource.CognitiveServices.OleChat.css?x=@(new System.Random().Next())" rel="stylesheet" type="text/css" />
<script src="/sitecore modules/Web/SitecoreCognitiveServices/js/Sitecore.SharedSource.CognitiveServices.OleChat.js"></script>

<div class="frame">
    <form class="form chat-form" method="post" action="/SitecoreCognitiveServices/CognitiveBot/Post">
        <div class="chat-conversation"></div>
        <input class="chat-input" type="text" />
        <input type="hidden" name="chat-db" class="chat-db" value="@Model.Database" />
        <input type="hidden" name="chat-lang" class="chat-lang" value="@Model.Language" />
        <input type="hidden" name="chat-id" class="chat-id" value="@Model.Id" />
        <button class="chat-submit scButton">Send</button>
    </form>
</div>